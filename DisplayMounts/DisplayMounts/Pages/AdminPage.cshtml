            <option value="Rogue">Rogue</option>
            <option value="Shaman">Shaman</option>
            <option value="Hunter">Hunter</option>
            <option value="Warrior">Warrior</option>
            <option value="Paladin">Paladin</option>
            <option value="Death Knight">Death Knight</option>
        </select>*@


        @*<br />
        <label asp-for="NewMount.WebLink" class="m-2"></label>
        <input asp-for="NewMount.WebLink" class="menufordropdown" required />
        <br />
        <label asp-for="NewMount.ImgLink" class="m-2"></label>
        <input asp-for="NewMount.ImgLink" class="menufordropdown" required />
        <br />*@


        <input type="submit" class="btn-primary m-2"  value="Add new mount/Save changes" />

        </div>



    </form>

    <table class="table">
        @for (int i = 1; i <= Model.Mounts.Count; i++)
        {
            <tr>
                <td><a asp-route-editid="@Model.Mounts[i-1].Id">Edit</a></td>
                <td><a asp-route-deleteindex="@Model.Mounts[i-1].Id">Remove</a></td>
                <td>@Model.Mounts[i - 1].Id</td>
                <td>@Model.Mounts[i - 1].Name</td>
                <td>@Model.Mounts[i - 1].WebLink</td>
                <td>@Model.Mounts[i - 1].Faction</td>
                <td>@Model.Mounts[i - 1].Expansion</td>
                <td>@Model.Mounts[i - 1].PlayerClass</td>
                <td>@Model.Mounts[i - 1].ImgLink</td>
            </tr>
        }
            </table>

        }
        else
        {
            <p>Not admin</p>
        }
    }
    else
    {
        <p>You are not the admin</p>
    }
</div>
