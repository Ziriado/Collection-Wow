@page
@model PrivacyModel
@{
    ViewData["Title"] = "Admin Page";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">

    @if (User.Identity.IsAuthenticated )
    {
        @if (Model.MyUser.Id == "9fa7037c-a563-4eb2-9aa7-0fa23ebd09f5")
        {
            
        <form method="post">
        
        @if (Model.NewMount != null && Model.NewMount.Id != 0)
        {
            <input asp-for="NewMount.Id" type="hidden" />
        }

        <div class="save-Mount">
            <h4> Modify Mount </h4>


        <div class="form-row">
            <label asp-for="NewMount.Name" class="label-left">Name:</label>
            <div class="input-right">
                <input asp-for="NewMount.Name" required />
            </div>
        </div>

        <div class="form-row">
            <label asp-for="NewMount.Expansion" class="label-left">Expansion:</label>
            <div class="input-right">
                <select asp-for="NewMount.Expansion" required>
                    <option value="">Select an expansion</option>
                    <option value="Vanilla">Vanilla</option>
                    <option value="Burning Crusade">Burning Crusade</option>
                    <option value="Wrath of the Lich King">Wrath of the Lich King</option>
                </select>
            </div>
        </div>


        <div class="form-row">
            <label asp-for="NewMount.Faction" class="label-left">Faction:</label>
            <div class="input-right">
                <select asp-for="NewMount.Faction" required>
                    <option value="">Select a faction</option>
                    <option value="Neutral">Neutral</option>
                    <option value="Alliance">Alliance</option>
                    <option value="Horde">Horde</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <label asp-for="NewMount.PlayerClass" class="label-left">PlayerClass:</label>
            <div class="input-right">
                <select asp-for="NewMount.PlayerClass" required>
                    <option value="">Select a class</option>
                    <option value="Neutral">Neutral</option>
                    <option value="Priest">Priest</option>
                    <option value="Warlock">Warlock</option>
                    <option value="Mage">Mage</option>
                    <option value="Druid">Druid</option>
                    <option value="Rogue">Rogue</option>
                    <option value="Shaman">Shaman</option>
                    <option value="Hunter">Hunter</option>
                    <option value="Warrior">Warrior</option>
                    <option value="Paladin">Paladin</option>
                    <option value="Death Knight">Death Knight</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <label asp-for="NewMount.WebLink" class="label-left">WebLink:</label>
            <div class="input-right">
                <input asp-for="NewMount.WebLink" required />
            </div>
        </div>

        <div class="form-row">
            <label asp-for="NewMount.ImgLink" class="label-left">ImgLink:</label>
            <div class="input-right">
                <input asp-for="NewMount.ImgLink" required />
            </div>
        </div>

        

        @*<label asp-for="NewMount.Name" class="m-2"></label>
        <input asp-for="NewMount.Name" class="menufordropdown" required />
        <br />
        <label asp-for="NewMount.Expansion" class="m-2"></label>
        <select asp-for="NewMount.Expansion" class="menufordropdown m-2" required>
