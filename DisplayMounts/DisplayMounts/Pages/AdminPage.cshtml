@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">


    <table class="table">
        @for (int i = 1; i <= Model.Mounts.Count; i++)
        {
            <tr>
                <td><a asp-route-editid="@Model.Mounts[i - 1].ID">Edit</a></td>
                <td><a asp-route-deleteindex="@i">Remove</a></td>
                <td>@Model.Mounts[i - 1].ID</td>
                <td>@Model.Mounts[i - 1].Name</td>
                <td>@Model.Mounts[i - 1].WebLink</td>
                <td>@Model.Mounts[i - 1].Faction</td>
                <td>@Model.Mounts[i - 1].Expansion</td>
                <td>@Model.Mounts[i - 1].PlayerClass</td>
                <td>@Model.Mounts[i - 1].ImgLink</td>
            </tr>
        }
    </table>


    <form method="post">

        <input asp-for="NewMount.ID" type="hidden" />

        <label asp-for="NewMount.Name"></label>
        <input asp-for="NewMount.Name" />
        <span asp-validation-for="NewMount.Name" class="text-danger"></span>
        <br />
        <label asp-for="NewMount.ImgLink"></label>
        <input asp-for="NewMount.ImgLink" />
        <span asp-validation-for="NewMount.ImgLink" class="text-danger"></span>
        <br />
        <label asp-for="NewMount.Expansion"></label>
        <input asp-for="NewMount.Expansion" />
        <span asp-validation-for="NewMount.Expansion" class="text-danger"></span>
        <br />
        <label asp-for="NewMount.WebLink"></label>
        <input asp-for="NewMount.WebLink" />
        <span asp-validation-for="NewMount.WebLink" class="text-danger"></span>
        <br />
          <label asp-for="NewMount.Faction"></label>
        <input asp-for="NewMount.Faction" />
        <span asp-validation-for="NewMount.Faction" class="text-danger"></span>
        <br />
        <label asp-for="NewMount.PlayerClass"></label>
        <input asp-for="NewMount.PlayerClass" />
        <span asp-validation-for="NewMount.PlayerClass" class="text-danger"></span>
        <br />
        <input type="submit" value="Add new mount/Save changes" />





    </form>


    
</div>
